<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/activity_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.rolex.CalendarActivity">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="58dp"
                android:src="@drawable/logocc" />

            <com.stacktips.view.CustomCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"


                android:background="@color/black"
                app:titleLayoutBackgroundColor="@color/colorPrimary"
                app:weekLayoutBackgroundColor="#add0e6" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonn"
                android:onClick="goToPreferences"
                android:text="@string/go_to_preferences" />


        </LinearLayout>


        <TextView
            android:layout_width="196dp"
            android:layout_height="63dp"
            android:layout_below="@+id/lin"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="154dp"
            android:fontFamily="casual"
            android:text="Bleeding days"
            android:textSize="20dp"

            android:textStyle="bold" />


        <TextView
            android:layout_width="212dp"
            android:layout_height="67dp"
            android:layout_below="@+id/lin"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="-21dp"
            android:layout_marginTop="137dp"
            android:layout_marginEnd="-63dp"
            android:fontFamily="casual"
            android:text="Ovulation day"

            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="253dp"
            android:layout_height="71dp"
            android:layout_below="@+id/lin"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="-21dp"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="-14dp"
            android:fontFamily="casual"
            android:text="Safe day"

            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="133dp"
            android:layout_height="152dp"

            android:layout_below="@+id/lin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/ble" />

        <ImageView

            android:layout_width="117dp"
            android:layout_height="124dp"

            android:layout_below="@+id/lin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/pur" />

        <ImageView

            android:layout_width="126dp"
            android:layout_height="113dp"

            android:layout_below="@+id/lin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="182dp"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/gre" />

    </RelativeLayout>
</ScrollView>