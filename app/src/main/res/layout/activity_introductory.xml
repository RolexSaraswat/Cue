<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".introductory">

    <ImageView
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/gradbg"/>

    <ImageView
            android:id="@+id/logo"
            android:layout_width="412dp"
            android:elevation="10dp"
            android:layout_height="426dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"/>
    <ImageView
            android:layout_width="wrap_content"

            android:elevation="2dp"
            android:layout_marginTop="70dp"
            android:layout_height="60dp" app:srcCompat="@drawable/name" android:id="@+id/name"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
             android:id="@+id/test" android:textSize="20sp" app:layout_constraintEnd_toEndOf="@+id/bg" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintStart_toStartOf="parent"/>


    <com.cuberto.liquid_swipe.LiquidPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

    </com.cuberto.liquid_swipe.LiquidPager>

</androidx.constraintlayout.widget.ConstraintLayout>